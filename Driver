        int numberMonth = 0;
        int numberDay = 0;
        int numberYear = 0;
        
        checker.introDisplay();
        
        System.out.print("Please enter a date in mm/dd/yyyy ");
        
        userDateInput = in.nextLine();
        length = userDateInput.length();
        
        yearMin = length - 4;
        
        stringMonth = userDateInput.substring(0, 2);
        stringMonth = stringMonth.replace("/","");
        first = stringMonth.substring(0);
        
        
        if(first.equals("0"))
        {
            stringMonth = stringMonth.substring(2);
        }
        
        
        numberMonth = Integer.parseInt(stringMonth);
        stringDay = userDateInput.substring(2,5);
        stringDay = stringDay.replace("/","");
        first = stringDay.substring(0);
        
        
        if(first.equals("0"))
        {
            stringDay = stringDay.substring(1);
        }
        
        
        numberDay = Integer.parseInt(stringDay);
        
        stringYear = userDateInput.substring(yearMin, length);
        stringYear = stringYear.replace("/","");
        numberYear = Integer.parseInt(stringYear);
        
        checker.printTheMonth(numberMonth);
        checker.printTheDay(numberMonth, numberDay);
        checker.yearOutput(numberYear);
    }
